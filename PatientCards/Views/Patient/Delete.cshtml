@model Patient
@{
    ViewData["Title"] = $"Удалить пациента";
}
<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        @* Header *@
        <h1 class="text-center display-2 mb-3">@ViewData["Title"]</h1>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-controller="Patient" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary bg-gradient mb-3 fw-semibold btn-sm text-uppercase">
                            <small>Назад</small>
                        </a>
                    </div>
                </div>
                @* Информация о пациенте *@
                <div class="row">
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <h3>Информация о пациенте</h3>
                        <div class="row pl-2 my-3">
                            <p class="lh-sm"><b>Фамилия:</b> @Model.LastName</p>
                            <p class="lh-sm"><b>Имя:</b> @Model.FirstName</p>
                            <p class="lh-sm"><b>Отчество:</b> @Model.Patronymic</p>
                            <p class="lh-sm"><b>Дата рождения:</b> @Model.DateOfBirth</p>
                            <p class="lh-sm"><b>Телефон:</b> @Model.Phone</p>
                        </div>
                        @* Подтверждение *@
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-danger form-control">Удалить</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</form>